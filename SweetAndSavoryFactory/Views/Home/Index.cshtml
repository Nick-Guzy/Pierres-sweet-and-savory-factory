@{
  Layout = "_Layout";
}

@using SweetAndSavoryFactory.Models;

<h1>Welcome to Pierre's Sweet and Savory Factory!</h1>

<hr>

<h4>Treats</h4>
@if (Model["treats"].Length == 0)
{
  <p>No treats have been added yet!</p>
} 
<ul>
  @foreach (Treat trt in Model["treats"])
  {
    <li>@Html.ActionLink(@trt.Name, "Details", "Treats", new { id = @eng.TreatId})</li>
  }
</ul>

<h4>Machines</h4>
@if (Model["machines"].Length == 0)
{
  <p>No machines have been added yet!</p>
} 
<ul>
  @foreach (Machine machine in Model["machines"])
  {
    <li>@Html.ActionLink(@machine.Description, "Details", "Machines", new { id = @machine.MachineId})</li>
  }
</ul>

<hr>

<p>@Html.ActionLink("Manage machines", "Index", "Machines")</p> 
<p>@Html.ActionLink("Manage treats", "Index", "Treats")</p>