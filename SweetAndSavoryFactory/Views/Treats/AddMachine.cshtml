@{
  Layout = "_Layout";
}

@model SweetAndSavoryFactory.Models.Engineer

<h2>Add a Flavor</h2>

<h4>Add a Flavor to this Engineer: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.EngineerId)

    @Html.Label("Select Flavor")
    @Html.DropDownList("FlavorId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>