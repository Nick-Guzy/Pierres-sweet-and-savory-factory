@{
  Layout = "_Layout";
}

@using SweetAndSavoryFactory.Models;

<h1>Treats for @User.Identity.Name</h1>

@if (@Model.Count == 0)
{
  <h3>No treats have been added yet!</h3>
} 

<ul>
  @foreach(Treat treat in Model)
  {
    <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId }) | @treat.Flavor.Description</li>
  }
</ul>

<p>@Html.ActionLink("Add new treat", "Create")</p>
<p>@Html.ActionLink("Add new Flavor", "Create", "Flavors")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>