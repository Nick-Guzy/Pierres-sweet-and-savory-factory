@{
  Layout = "_Layout";
}

@using SweetAndSavoryFactory.Models;

<h1>Flavors</h1>

@if (@Model.Count == 0)
{
  <h3>No Flavors have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{Flavor.Description}", "Details", new { id = Flavor.FlavorId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new Flavor", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>